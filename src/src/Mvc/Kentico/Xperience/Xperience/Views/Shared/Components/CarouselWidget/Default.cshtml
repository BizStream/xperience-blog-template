@model ComponentViewModel<CarouselWidgetProperties>

<div class="swiper-container">
    <div class="swiper-wrapper">
        @foreach (var imageUrl in Model.Properties.ImageUrls)
        {
            <div class="swiper-slide">
                <img src="@imageUrl" class="carousel-img" alt="Carousel slide image">
            </div>
        }
    </div>

    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>
