@using BlogTemplate.Mvc.Articles.Components
@using BlogTemplate.Mvc.Authors.Components
@using BlogTemplate.Mvc.Home.Abstractions

@model HomeViewModel

@{
    ViewBag.ContainerClassName = "home";
}

@if( Model is null )
{
    return;
}

@section head {
<link href="/home.min.css" rel="stylesheet" asp-append-version="true" />
}

<h1 class="title">@Model.Heading</h1>
@if( Model.FeaturedAuthorGuid.HasValue )
{
    @( await Component.InvokeAsync<AuthorComponent>( new { authorGuid = Model.FeaturedAuthorGuid } ) )
}

@( await Component.InvokeAsync<RecentArticlesComponent>( new { count = 5 } ) )
