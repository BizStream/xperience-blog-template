@model HomeViewModel

@{ ViewBag.ContainerClassName = "home"; }
@section head {
    <link href="/dist/home.min.css" rel="stylesheet" asp-append-version="true" />
}

<h1 class="title">@Model.Heading</h1>
@if( Model.FeaturedAuthorGuid.HasValue )
{   
    @await Component.InvokeAsync( "Author", new { authorGuid = Model.FeaturedAuthorGuid } )
}

@await Html.PartialAsync( "_RecentArticles", Model.RecentArticles )

@section scripts {
    <script src="/dist/home.min.js" asp-append-version="true"></script>
}
